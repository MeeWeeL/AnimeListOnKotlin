<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardViewMainStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/constraintOfCardViewStyle">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_fragment_recycler_item_image_view_card_view"
            style="@style/imageCardViewCardViewMainStyle"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/main_fragment_recycler_item_image_view"
                style="@style/imageCardViewMainStyle"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mainFragmentRecyclerItemTextView"
            style="@style/titleCardViewMainStyle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/item_data"
            style="@style/dataCardViewMainStyle"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/not_watched_btn"
            style="@style/notWatchedButton"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/watched_btn"
            style="@style/watchedButton"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>