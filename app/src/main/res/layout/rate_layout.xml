<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_this_title"
        android:textSize="28sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rateButton"
        style="@style/RateButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        app:layout_constraintTop_toTopOf="@id/rateTitle"
        app:layout_constraintBottom_toBottomOf="@id/rateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/_0dp"
        android:text="@string/later" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rateStar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/rateTitle"
        app:layout_constraintTop_toBottomOf="@id/rateTitle"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star1"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rateStar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star2"
        app:layout_constraintStart_toEndOf="@id/rateStar1"
        app:layout_constraintBottom_toBottomOf="@id/rateStar1"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rateStar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star3"
        app:layout_constraintStart_toEndOf="@id/rateStar2"
        app:layout_constraintBottom_toBottomOf="@id/rateStar2"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rateStar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star4"
        app:layout_constraintStart_toEndOf="@id/rateStar3"
        app:layout_constraintBottom_toBottomOf="@id/rateStar3"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rateStar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star5"
        app:layout_constraintStart_toEndOf="@id/rateStar4"
        app:layout_constraintBottom_toBottomOf="@id/rateStar4"
        />
</androidx.constraintlayout.widget.ConstraintLayout>