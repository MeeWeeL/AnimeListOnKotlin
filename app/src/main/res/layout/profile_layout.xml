<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="Anime in queue:"/>

        <TextView
            android:id="@+id/wanted_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="13"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wanted_copy"
            style="@style/profileButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="Watched anime:"/>

        <TextView
            android:id="@+id/watched_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="13"/>

        <Button
            android:id="@+id/watched_copy"
            style="@style/profileButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="Not watched anime:"/>

        <TextView
            android:id="@+id/not_watched_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="13"/>

        <Button
            android:id="@+id/not_watched_copy"
            style="@style/profileButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="Unwanted anime:"/>

        <TextView
            android:id="@+id/unwanted_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="13"/>

        <Button
            android:id="@+id/unwanted_copy"
            style="@style/profileButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="Not sorted anime:"/>

        <TextView
            android:id="@+id/main_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10dp"
            android:text="13"/>

        <Button
            android:id="@+id/main_copy"
            style="@style/profileButtonStyle"/>
    </LinearLayout>
</LinearLayout>