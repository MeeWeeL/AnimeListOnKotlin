<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.mainfragment.MainFragment">

        <TextView
            android:id="@+id/anime_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/anime_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:textSize="@dimen/_30sp"
            android:textStyle="bold"
            tools:text="Dragonâ€™s Dogma"
            android:gravity="center" />

        <ImageView
            android:id="@+id/anime_image"
            android:layout_width="@dimen/_0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintHorizontal_weight="1"
            android:src="@drawable/anig"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anime_name"
            app:layout_constraintBottom_toTopOf="@id/descriptionLabel"
            app:layout_constraintEnd_toStartOf="@id/release_Data"/>

        <TextView
            android:id="@+id/release_Data"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            tools:text="data"
            app:layout_constraintHorizontal_weight="2"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/anime_image"
            app:layout_constraintTop_toTopOf="@id/anime_image"
            app:layout_constraintBottom_toTopOf="@+id/release_Author"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/release_Author"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            tools:text="author"
            app:layout_constraintHorizontal_weight="2"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/anime_image"
            app:layout_constraintTop_toBottomOf="@id/release_Data"
            app:layout_constraintBottom_toTopOf="@id/release_Genre"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/release_Genre"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            tools:text="genre"
            app:layout_constraintHorizontal_weight="2"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/anime_image"
            app:layout_constraintTop_toBottomOf="@id/release_Author"
            app:layout_constraintBottom_toBottomOf="@id/anime_image"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:text="description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anime_image"
            app:layout_constraintBottom_toTopOf="@id/scroll"/>


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionLabel">

            <TextView
                android:id="@+id/description_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:layout_margin="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:text="Default description"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>